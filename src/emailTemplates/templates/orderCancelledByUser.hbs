{{#extend "baseLayout" title="Ваш заказ отменён"}}
  {{#content "body"}}
    <tr>
      <td style="padding: 30px; font-family: Arial, sans-serif; background-color: #ffffff; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.05);">
        <h2 style="color: #dc3545; font-size: 22px; margin-bottom: 20px;">❌ Заказ отменён</h2>

        <p style="font-size: 16px; color: #333;">
          Пользователь <strong>{{orderData.user.name}}</strong> отменил свой заказ ID {{orderData._id}} от {{formattedDate}}. Ниже указаны детали.
        </p>
        
        <h3 style="margin-top: 20px; font-size: 18px; color: #555;">Информация об отменённом заказе</h3>
        <table style="width: 100%; font-size: 15px; color: #444; margin: 10px 0;">
          <tr>
            <td><strong>Метод доставки:</strong></td>
            <td>{{orderData.deliveryMethod}}</td>
          </tr>
          <tr>
            <td><strong>Сумма заказа:</strong></td>
            <td>{{orderData.priceDetails.totalPriceWithDiscount}} ₽</td>
          </tr>
        </table>
        <h3 style="margin-top: 20px; font-size: 18px; color: #555;">Состав заказа</h3>
        <table style="width: 100%; font-size: 15px; color: #444; border-collapse: collapse;" cellspacing="0">
          <thead>
            <tr>
              <th style="text-align: left; padding: 8px 4px;">Товар</th>
              <th style="text-align: right; padding: 8px 4px;">Кол-во</th>
              <th style="text-align: right; padding: 8px 4px;">Цена</th>
              <th style="text-align: right; padding: 8px 4px;">Итого</th>
            </tr>
          </thead>
          <tbody>
            {{#each orderData.products}}
              <tr>
                <td style="padding: 6px 4px;">{{product}}</td>
                <td style="text-align: right;">{{quantity}}</td>
                <td style="text-align: right;">{{priceWithDiscount}} ₽</td>
                <td style="text-align: right;">{{totalPriceWithDiscount}} ₽</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        <h3 style="text-align: right; font-size: 16px; margin-top: 20px;">
          <span style="color: #888;">Сумма без скидки:</span> {{orderData.priceDetails.totalPrice}} ₽<br>
          <span style="font-weight: bold; color: #000;">Итоговая сумма:</span> {{orderData.priceDetails.totalPriceWithDiscount}} ₽
        </h3>
        <h2>Пользовтель</h2>
        <table style="width: 100%; font-size: 15px; color: #444; border-collapse: collapse;" cellspacing="0">
          <tbody>
            <tr>
              <td style="padding: 6px 4px;">Имя</td>
              <td style="text-align: left;">{{orderData.user.name}}</td>
            </tr>
            <tr>
              <td style="padding: 6px 4px;">Телефон</td>
              <td style="text-align: left;">{{orderData.user.phone}}</td>
            </tr>
            <tr>
              <td style="padding: 6px 4px;">Почта</td>
              <td style="text-align: left;">{{orderData.user.email}}</td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  {{/content}}
{{/extend}}